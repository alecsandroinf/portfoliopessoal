#implementação de um programa que calcule a área de um círculo, a partir do raio informado pelo usuário.

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Área do círculo</title>
</head>
<body>
    <script>
//solicitar ao usuário o raio do círculo

let raio = prompt('Insira o raio do circulo');

//converter o raio de string para número

raio=parseFloat(raio);

//calcular a área

const area=Math.PI*Math.pow(raio,2);

// exibir o resultado na tela 

//console.log('A área do círculo é:' , area);

console.log('A área do cículo é:', area);

alert("A area do círculo é: "+area.toFixed(2))
    </script>
</body>
</html>
